<div class="jumbotron text-center"><h1 class="display-3">Prescriptions</h1></div>	
	<div class="row">
		<div class="col-lg-3">
		</div>
		<div class="col-lg-6 text-center">
			<form id="find_app_id" action="/find_appointment" method="post">
					<div class="input-group">
						    <input onkeyup="search_appointments(this.value)" type="text" class="form-control" name="P_name" 
						    placeholder="Search for an appointment by a patient or doctor's full name" required>
					</div>
			</form>
		</div>
		<div class="col-lg-3"></div>
	</div>

<div class="container-fluid py-5">
	<table class="table text-center">
		<thead class="thead-inverse">
			<tr>
				<th>Appointment ID</th>
				<th>Patient Name</th>
				<th>Doctor Name</th>
				<th>Diagnosis Description</th>
				<th>
					<div class="row">
						<div class="col-sm">
							Drug Name
						</div>
						<div class="col-sm">
							Amount
						</div>
					</div>
				</th>
			</tr>
		</thead>
		<tbody id="search_results">	
		</tbody>
		<tbody id="prescription-table">
			{{#each prescription}}
				<tr>
						<td style="display:none;">{{this.Prescription_id}}</td>
						<td>{{this.App_id}}</td>
						<td>{{this.P_name}}</td>
						<td>{{this.D_name}}</td>
						<td>{{this.Description}}</td>
						<td>
							<div class="row">
								<div class="col-sm mr-2">
										<div class="form-group row">
											this.Drug_name
										</div>
									</div>
									<div class="col-sm">
										<div class="form-group row">
											{{this.Amount}}
										</div>
									</div>	
								</div>
						</td>	
						<td><button onclick="delete_prescription({{this.Prescription_id}})" class="btn btn-danger">Delete</button></td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>


<script type="text/javascript">
	function delete_prescription(id){
		$.ajax({
			url: '/delete_prescription/' + id,
			type: 'DELETE',
			success: function(){
				window.location.href = '/diagnoses';
			}
		});
	}

	$('#search_results').on('click', '#add_diagnosis', function(app_id){
		console.log(this.val());
		var data = $('#' + app_id)
		console.log(data);
		$.ajax({
			url: '/add_diagnosis',
			type: 'POST',
			data: data,
			success: function(){
				window.location.href = '/diagnoses';
			}
		});
	});

	function search_appointments(search){
		$.ajax({
			url: '/find_appointment_diagnosis/' + search,
			type: 'GET',
			success: function(data){
				$('#search_results').html(" ");
				data.forEach(function(element){
					$('#search_results').append(`
					<tr>
						<td>${element.App_id}</td>
						<td>${element.P_name}</td>
						<td>${element.D_name}</td>
						<td>${element.Description}</td>
						<td>
							<form action = "/add_prescription" method="POST">
							<div class="row">
								<div class="col-sm mr-2">
										<div class="form-group row">
											<input id="Description${element.App_id} "type="text" class="form-control" name="Drug_name" required>
										</div>
									</div>
									<div class="col-sm">
										<div class="form-group row">
											<input class="form-control" min = "0" type="number" name="Amount">
										</div>
									</div>	
								</div>
								<input style = "display: none" name = "App_id" value="${element.App_id}">
								<button id="${element.App_id}" class="btn btn-primary my-3">Add Prescription</button>
							</form>
						</td>
					</tr>
				`)
					if(element.Drug_name !== null){
						$('#Description'+ element.App_id).attr('value', element.Drug_name);
					}
				});
			}
		});
	}
</script>